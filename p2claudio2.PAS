Program SEGURO_DE_VIDA ;
VAR
NOMESEGURADOLS :STRING ;
IDADELS: INTEGER ;
SEXOLS :CHAR  ;
CASCOLS : REAL ;
BRUTOLS :REAL;
VALORVISTALS : REAL ;
VALOR3XLS: REAL ;
VALOR9XLS: REAL ;
FRANQLS: REAL ;
SNLS: CHAR ;


Begin
repeat
WRITELN ('SISTEMAS DE SEGUROS');
WRITELN ('--------------------------');
WRITELN ('NOME DO SEGURADO----------');
READ (NOMESEGURADOLS);
WRITELN ('IDADE---------------------');
READ (IDADELS);
WRITELN ('SEXO----------------------');
READ (SEXOLS);
WRITELN ('CASCO---------------------');
READ (CASCOLS);
WRITELN ('--------------------------');

IF (SEXOLS='M') AND (IDADELS>18) AND (IDADELS<30) THEN 
 BRUTOLS:=CASCOLS*0.087 ; FRANQLS:=BRUTOLS*0.10;
  
IF (SEXOLS='F') AND (IDADELS>18) AND (IDADELS<30) THEN
BRUTOLS:=CASCOLS*0.067 ; FRANQLS:=BRUTOLS*0.09 ;

IF (IDADELS>=30) AND (IDADELS<=60) THEN
BRUTOLS:=CASCOLS*0.047 ; FRANQLS:=BRUTOLS*0.07;               

IF (IDADELS>=60) OR (IDADELS>55) AND (SEXOLS='F')THEN 
BRUTOLS:=CASCOLS*0.077; FRANQLS:=BRUTOLS*0.11;


VALORVISTALS:=BRUTOLS*0.87;
VALOR3XLS:=BRUTOLS/3 ;
VALOR9XLS:=BRUTOLS*1.12/(9);


IF (FRANQLS<400) THEN 
FRANQLS:=400 ;


WRITELN ('SAIDA');
WRITELN ('-----------------------------');
WRITELN ('BRUTO------------------------',BRUTOLS:0:2);
WRITELN ('VALOR A VISTA ---------------',VALORVISTALS:0:2);
WRITELN ('VALOR EM 3 PARCELAS ---------',VALOR3XLS:0:2);
WRITELN ('VALOR EM 9 PARCELAS ---------',VALOR9XLS:0:2);
WRITELN ('FRANQUIA --------------------',FRANQLS:0:2);
WRITELN ('-----------------------------');
WRITELN ('REALIZAR UMA NOVA CONSULTA ? < S/N >');
READ (SNLS);
UNTIL (SNLS='N')
end.