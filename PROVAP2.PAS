Program SEGURO_DE_VIDA ;
VAR 
NOMELL :STRING ;
IDADELL: INTEGER ;
SEXOLL :CHAR  ;
CASCOLL : REAL ;
BRUTOLL :REAL;
VISTALL : REAL ;
VALOR3XLL: REAL ;
VALOR12XLL: REAL ;
FRANQLL: REAL ;
RESPLL: CHAR ;


Begin
repeat
WRITELN ('SISTEMAS  SEGURADORAS');
WRITELN ('LUCIANO LIMA');
WRITELN ('------------------------:');
WRITELN ('ENTRADAS:');
WRITE ('NOME DO SEGURADO----------:');
READ (NOMELL);
WRITE ('IDADE---------------------:');
READ (IDADELL);
WRITE ('SEXO----------------------:');
READ (SEXOLL);
WRITE ('CASCO---------------------:');
READ (CASCOLL);
WRITE ('--------------------------:');

IF (SEXOLL='M') AND (IDADELL>18) AND (IDADELL<30) THEN 
BEGIN
 BRUTOLL:=CASCOLL*0.09 ; 
 FRANQLL:=BRUTOLL*0.10;
 END;
 IF (SEXOLL='F') AND (IDADELL>18) AND (IDADELL<30) THEN
 BEGIN
BRUTOLL:=CASCOLL*0.07 ; FRANQLL:=BRUTOLL*0.08 ;
 END;
IF (IDADELL>=30) AND (IDADELL<=60) THEN
BEGIN
BRUTOLL:=CASCOLL*0.05 ; FRANQLL:=BRUTOLL*0.07;               
 END;
IF (IDADELL>60) OR (IDADELL>55) AND (SEXOLL='F')THEN 
BEGIN 
BRUTOLL:=CASCOLL*0.08; FRANQLL:=BRUTOLL*0.09;
END;

VISTALL:=BRUTOLL*0.90;
VALOR3XLL:=BRUTOLL/3 ;
VALOR12XLL:=BRUTOLL*1.15/12;


IF (FRANQLL<400) THEN 
BEGIN
FRANQLL:=400 ;
END;


WRITELN ('SAIDAS:');
WRITELN ('-----------------------------:');
WRITELN ('BRUTO------------------------:',BRUTOLL:0:2);
WRITELN ('VALOR A VISTA ---------------:',VISTALL:0:2);
WRITELN ('VALOR PARA 3X ---------------:',VALOR3XLL:0:2);
WRITELN ('VALOR PARA 12X --------------:',VALOR12XLL:0:2);
WRITELN ('FRANQUIA --------------------:',FRANQLL:0:2);
WRITELN ('-----------------------------:');
WRITELN ('REALIZAR UMA NOVA CONSULTA ? < S/N >');
READ (RESPLL);
UNTIL (RESPLL='N')
end.